{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noLib": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false
  },
  "files": ["src/index.ts"]
}
